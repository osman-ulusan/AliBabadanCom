@model Entity.Entity.Ilan

@{
    ViewBag.Title = "UrunDetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UrunDetay</h2>

<!-- product category -->
<section id="aa-product-details">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-product-details-area">
                    <div class="aa-product-details-content">
                        <div class="row">
                            <!-- Modal view slider -->
                            <div class="col-md-5 col-sm-5 col-xs-12">
                                <div class="aa-product-view-slider">
                                    <div id="demo-1" class="simpleLens-gallery-container">
                                        <div class="simpleLens-container">
                                            <div class="simpleLens-big-image-container"><img src="/Content/images/@Model.Images.Image1" class="simpleLens-big-image"></div>
                                        </div>
                                        <div class="simpleLens-thumbnails-container">
                                            <a data-big-image="/Content/images/@Model.Images.Image1" class="simpleLens-thumbnail-wrapper" href="#">
                                                <img src="~/Content/images/@Model.Images.Image1" style="width:55px; height:45px;">
                                            </a>
                                            <a data-big-image="/Content/images/@Model.Images.Image2" class="simpleLens-thumbnail-wrapper" href="#">
                                                <img src="~/Content/images/@Model.Images.Image2" style="width:55px; height:45px;">
                                            </a>
                                            <a data-big-image="/Content/images/@Model.Images.Image3" class="simpleLens-thumbnail-wrapper" href="#">
                                                <img src="~/Content/images/@Model.Images.Image3" style="width:55px; height:45px;">
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Modal view content -->
                            <div class="col-md-7 col-sm-7 col-xs-12">
                                <div class="aa-product-view-content">
                                    <h2>@Model.Title</h2>
                                    <div class="aa-price-block">
                                        <span class="aa-product-view-price">Teklif Sayısı : <b> @Model.TeklifSayisi </b></span>
                                        <p class="aa-product-avilability">İlan Tarihi : <span><b> @Model.CreateDate </b></span></p>
                                    </div>
                                    <p>Açıklama : @Model.Description</p>
                                    @*<h4>Size</h4>
                                        <div class="aa-prod-view-size">
                                            <a href="#">S</a>
                                            <a href="#">M</a>
                                            <a href="#">L</a>
                                            <a href="#">XL</a>
                                        </div>*@
                                    <h4>Renk</h4>
                                    <div class="aa-color-tag">
                                        <a href="#" class="aa-color-@Model.Color.Name"></a>
                                    </div>
                                    <div class="aa-prod-quantity">
                                        <p class="aa-prod-category" style="margin-left:-5px; margin-top:-15px;">
                                            Marka : <a href="#">@Model.Marka.Name</a><br />
                                            Model : <a href="#">@Model.Model.Name</a>
                                        </p>
                                    </div>
                                    <div class="aa-prod-quantity">
                                        <p class="aa-prod-category" style="margin-left:-5px;">
                                            Garanti :
                                            @if (Model.Garanti == true)
                                            {
                                                <b>Var</b>
                                            }
                                            else
                                            {
                                                <b>Yok</b>
                                            }

                                        </p>
                                    </div>
                                    <div class="aa-prod-view-bottom">
                                        <a class="aa-add-to-cart-btn" href="#">Teklif Ver</a>
                                        <a class="aa-add-to-cart-btn" href="#">Wishlist</a>
                                        <a class="aa-add-to-cart-btn" href="#">Compare</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="aa-product-details-bottom">
