    <script type="text/javascript">
        $(function () {

            var isSuccess = false;

            $("#btnRegister").click(function () {
                var userName = $("#userName").val();
                var password = $("#password").val();
                var email = $("#email").val();

                if (userName == "" || password == "" || email == "") {
                    alert("lütfen kullanıcı adı,şifre ve emailinizi boş geçmeyin!")
                    return;
                }

                var data = { userName: userName, password: password, email: email };
                $.ajax({
                    type: 'POST',
                    url: "/User/Register",
                    data: JSON.stringify(data),
                    contentType: 'application/json; charset=utf-8',
                    dataType: 'json',
                    success: function (gData) {

                        if (gData != "") {
                            if (gData == "Kayıt Tamamlandı") {
                                alert("Kayıt Başarıyla Tamamlandı");
                                $('#modalRegisterForm').modal('hide');
                                $('#login-modal').modal('show');
                            }
                            else {
                                alert(gData);
                            }
                            //isSuccess = true;
                        }

                    },
                    complete: function () {

                    }

                });

            })
        });


        $(function () {

            var isSuccess = false;

            $("#btn-login").click(function () {
                var eMail = $("#login-email").val();
                var passSword = $("#login-password").val();
                var rememBerme = $("#login-rememberme").prop("checked");


                var data = { Email: eMail, password: passSword, rememberme: rememBerme };

                $.ajax({
                    type: 'POST',
                    url: "/User/Login",
                    data: JSON.stringify(data),
                    contentType: 'application/json; charset=utf-8',
                    dataType: 'json',
                    success: function (gData) {

                        if (gData != "") {
                            console.log(gData);
                            if (gData == "User") {
                                alert("Hoşgeldin" + eMail);
                            }
                            else {
                                alert(gData);
                            }
                            //isSuccess = true;
                        }

                    },
                    complete: function () {

                    }

                });

            })
        });

    </script>
